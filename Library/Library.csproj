<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <AssemblyName>MeyerCorp.HateoasBuilder</AssemblyName>
    <RootNamespace>MeyerCorp.HateoasBuilder</RootNamespace>
    <PackageId>MeyerCorp.HateoasBuilder</PackageId>
    <Version>1.0.0-preview-1</Version>
    <Authors>danielpmeyer</Authors>
    <Company>Meyer Corporation</Company>
    <Description>Extension based builder for creating HATEOAS links in RESTful reponses in .NET.</Description>
    <Copyright>2023, Meyer Corporation</Copyright>
    <PackageProjectUrl>https://github.com/MeyerCorporation/HateoasBuilder</PackageProjectUrl>
    <PackageIcon>Meyer_M_Blue.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/MeyerCorporation/HateoasBuilder.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>HATEOAS, WebAPI, REST</PackageTags>
    <PackageReleaseNotes>Initial creation</PackageReleaseNotes>
    <NeutralLanguage>en-US</NeutralLanguage>
    <EnableNETAnalyzers>True</EnableNETAnalyzers>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>.NET Standard Library allowing convenient creation of HATEOAS for REST API models</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Meyer_M_Blue.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
